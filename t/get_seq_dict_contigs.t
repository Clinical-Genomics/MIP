);

## Then return the dict contigs
is_deeply( \@expected_contigs, \@{ $file_info{contigs} }, q{Got dict file contigs} );

## Given wrong file
my $wrong_file = catfile( $Bin, qw{ data 643594-miptest 643594-miptest_pedigree.yaml } );

trap {
    get_seq_dict_contigs(
        {
